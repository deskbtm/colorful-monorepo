{
	"name": "colorful-monorepo",
	"displayName": "Colorful Monorepo",
	"description": "The vscode extension that creates colorful monorepo",
	"version": "0.0.1",
	"license": "AGPL-3.0",
	"publisher": "HanWang",
	"icon": "logo.png",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/package.json"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "com.deskbtm.ColorfulMonorepo.select",
				"title": "Colorful Monorepo: Select Workspace Packages"
			}
		],
		"configuration": {
			"title": "Colorful Monorepo",
			"properties": {
				"ColorfulMonorepo.includeRoot": {
					"type": "boolean",
					"default": true,
					"description": "Include the monorepo root path as a workspace"
				},
				"ColorfulMonorepo.packages.regex.apps": {
					"type": "string",
					"default": "^app|web|api|frontend|backend|package",
					"description": "Regex to match app-like package paths"
				},
				"ColorfulMonorepo.packages.prefix.apps": {
					"type": "string",
					"default": "üåµ ",
					"description": "Folder prefix for apps"
				},
				"ColorfulMonorepo.packages.regex.libs": {
					"type": "string",
					"default": "^common|lib|private|first_party|third_party",
					"description": "Regex to match library-like package paths"
				},
				"ColorfulMonorepo.packages.prefix.libs": {
					"type": "string",
					"default": "üì¶ ",
					"description": "Folder prefix for libraries"
				},
				"ColorfulMonorepo.packages.regex.tools": {
					"type": "string",
					"default": "^tool|script|util",
					"description": "Regex to match tool-like package paths"
				},
				"ColorfulMonorepo.packages.prefix.tools": {
					"type": "string",
					"default": "‚öôÔ∏è",
					"description": "Folder prefix for tools"
				},
				"ColorfulMonorepo.packages.prefix.unknown": {
					"type": "string",
					"default": "ü•õ ",
					"description": "Folder prefix for unknown packages"
				},
				"ColorfulMonorepo.packages.prefix.root": {
					"type": "string",
					"default": "üå± ",
					"description": "Folder prefix for the root folder"
				},
				"ColorfulMonorepo.packages.custom": {
					"type": "array",
					"default": [],
					"description": "An array of custom 'regex/prefix' pairs like: [{regex:'foo', prefix:'bar'}, {regex:'fffoo', prefix:'bbbar'}]"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"build": "cross-env NODE_ENV=production webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"cross-env": "^7.0.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"typescript": "^4.5.5",
		"webpack": "^5.72.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"@deskbtm/workspace-tools": "link:../workspace-tools",
		"workspace-tools": "^0.18.3"
	}
}